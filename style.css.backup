    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
.author-avatar {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--primary), #0052A3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}   box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.author-avatar {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--primary), #e8b769);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}
/* CTA Section */
.cta-section {
    padding: 5rem 4rem;
    background: linear-gradient(135deg, var(--primary) 0%, #0052A3 100%);
    text-align: center;
}
.testimonial-author h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.btn-light-cta {
    background: white;
    color: var(--primary);
    padding: 0.875rem 2.5rem;
    font-size: 1.05rem;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
}

.btn-light-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    background: var(--background);
}   margin: 0 auto;
/* Footer New */
.footer-new {
    background: var(--sidebar-bg);
    color: #CBD5E1;
    padding: 4rem 4rem 2rem;
}   padding: 0.875rem 2.5rem;
    font-size: 1.05rem;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s, box-shadow 0.2s;
}

.btn-light-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}

/* Footer New */
.footer-new {
    background: #1e293b;
    color: #e2e8f0;
    padding: 4rem 4rem 2rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 4rem;
    max-width: 1200px;
    margin: 0 auto 3rem;
}

.footer-brand .brand-landing {
    color: white;
    margin-bottom: 1rem;
}

.footer-tagline {
    color: #94a3b8;
    font-size: 0.95rem;
    line-height: 1.6;
}

.footer-links-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
}

.footer-column h4 {
    color: white;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.footer-column ul {
    list-style: none;
}

.footer-column ul li {
    margin-bottom: 0.5rem;
}

.footer-column a {
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
}

.footer-column a:hover {
    color: white;
}

.footer-bottom {
    border-top: 1px solid #334155;
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
}

.footer-bottom p {
    color: #94a3b8;
    font-size: 0.9rem;
}

.social-links {
    display: flex;
    gap: 1.5rem;
}

.social-links a {
    color: #94a3b8;
    font-size: 1.25rem;
    transition: color 0.2s;
}

.social-links a:hover {
    color: white;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .hero-section-new {
        grid-template-columns: 1fr;
        padding: 6rem 2rem 4rem;
        gap: 3rem;
    }

    .hero-content {
        padding-right: 0;
        text-align: center;
        max-width: 100%;
    }

    .hero-illustration {
        height: 400px;
    }

    .workflow-grid,
    .features-grid-new {
        grid-template-columns: repeat(2, 1fr);
    }

    .testimonials-grid {
        grid-template-columns: 1fr;
    }

    .landing-nav {
        padding: 1rem 2rem;
    }
}

@media (max-width: 768px) {
    .landing-nav {
        padding: 1rem 1.5rem;
    }

    .landing-links {
        gap: 1.5rem;
        font-size: 0.9rem;
    }

    .hero-section-new {
        padding: 5rem 1.5rem 3rem;
    }

    .hero-title-new {
        font-size: 2.5rem;
    }

    .workflow-grid,
    .features-grid-new {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .section-title {
        font-size: 2rem;
    }

    .how-it-works-section,
    .features-section-new,
    .success-stories-section,
    .cta-section {
        padding: 4rem 1.5rem;
    }

    .footer-new {
        padding: 3rem 1.5rem 1.5rem;
    }

    .footer-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .footer-links-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
}